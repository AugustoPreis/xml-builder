{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
		"declaration": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js", "src/index.ts",
  ]
}